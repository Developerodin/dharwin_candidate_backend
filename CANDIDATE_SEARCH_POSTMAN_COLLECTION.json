{
  "info": {
    "name": "Candidate Search API",
    "description": "Advanced search and filtering for candidates",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Basic Search",
      "item": [
        {
          "name": "Search by Name",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/candidates?fullName=John",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "candidates"],
              "query": [
                {
                  "key": "fullName",
                  "value": "John"
                }
              ]
            }
          }
        },
        {
          "name": "Search by Email",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/candidates?email=john@example.com",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "candidates"],
              "query": [
                {
                  "key": "email",
                  "value": "john@example.com"
                }
              ]
            }
          }
        }
      ]
